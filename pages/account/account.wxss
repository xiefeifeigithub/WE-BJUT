/*卡片列表*/
.main-card {
  padding-bottom: 300rpx;
}
.main-card-item{
  display: flex;
  flex-direction: column;
  background: #fff;
  border-top: 1rpx solid #e5e5e5;
  border-bottom: 1rpx solid #e5e5e5;
  margin-bottom: 20rpx;
  background-repeat: no-repeat;
  background-size: 100% auto;
  background-position: bottom center;
  overflow: hidden;
}
.card-item-hd{
  position: relative;
  display: flex;
  align-items: center;
  height: 100rpx;
  margin-left: 30rpx;
}
.card-item-icon{
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
}
.card-item-name{
  font-size: 11pt;
  font-weight: bold;
  letter-spacing: 2px;
  margin-left:20rpx;
}
.card-item-bd{
  padding: 20rpx 220rpx 20rpx 20rpx;
  font-size: 10pt;
  display: flex;
  flex-direction: column;
}
.card-info-hd{
  display: flex;
  justify-content: space-between;
}
.card-info-left{
  display: flex;
  flex-direction: column;
}
.card-info-right{
  display: flex;
  color: #acacac;
  flex-direction: column;
}
.card-item-open{
  display: flex;
  align-items: center;
  justify-content: center;
  color: #7f848a;
  height: 150rpx;
  border-top: 1rpx solid #e5e5e5;
  margin-top: -1rpx;
}

