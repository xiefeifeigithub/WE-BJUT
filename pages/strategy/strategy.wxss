/* pages/aboutme/aboutme.wxss */
/* 引入搜索样式 */

.tags{
  margin-top: 20px;
  margin-left: 20px;
  margin-right: 20px;
  margin-bottom: 20px;
  box-sizing: border-box; 
}

.title{
  font-size: 20px;
  font-weight: bold;
}

.tags-btn{
  padding-top: 3px;
  padding-bottom: 3px;
  padding-left: 10px;
  margin-bottom: 8px;
  margin-right: 5px; 
}
.btn-default{
  border: 1px solid #ddd;
  color: #333;
  background-color: #fff;
}
.round-btn{
  border-radius: 150rpx;
}
.btn-xs{
  padding-top: 1px;
  padding-right: 5px;
  font-size: 10px;
  line-height: 2;
}
.btn{
  display: inline-block;
  text-align: center;
  font-weight: 400;
  white-space: nowrap;
  vertical-align: middle;
  background-color: #e5e5e5;
}
.text-gray{
  color:black;
}
.text-sm{
  font-size: 15px;
  vertical-align: middle
}
.badge{
  background: #17807d;
  opacity: 0.85;
  top: 0px;
  padding-top: 1px;
  padding-right: 5px;
  padding-bottom: 1px;
  padding-left: 5px;
  position: relative;
  color: #fff;
  display: inline-block;
  min-width: 10px;
  font-weight: 700;
  line-height: 1;
  text-align: center;
  white-space: nowrap;
  vertical-align: middle;
  border-radius: 150rpx;
}
.hide{
  display: none;
  box-sizing: border-box;
  margin-left: 20px;
}

.hide-border{
  margin-left: 20px;
}

.gaps1{
  width: 100%;
  height: 6px;
  background-color: #e5e5e5;
}

.gaps2{
  width: 100%;
  height: 10px;
  background-color: white;
}

.logo{
  /*margin-left: 250px;*/
  float: right; 
  width: 40px;
  height: 40px;
  
}