/* pages/score/score-result/score-result.wxss */
.container{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: left;
}

.tip{
  width: 95%;
  margin: 20rpx;
  height: auto;
  font-size: 28rpx;
    background: rgba(255, 255, 255, 1);
  box-shadow: 0px 4rpx 16rpx 0px rgba(140, 160, 181, 0.2);
  border-radius: 12rpx;
  box-sizing: border-box;
}

.line {
  width: 10rpx;
  height: 35rpx;
  background: #3963BC;
  border-radius: 0px 6rpx 6rpx 0px;
  margin-right: 8rpx;
}

.block {
  display: flex;
  /* justify-content: center; */
  align-items: center;
}


.category{
  margin: 10rpx;
  color: #3683d6;
}

.categoryThick{
  margin: 10rpx;
  color: #0398e7;
  font-weight: 800;
}

.info-row{
  padding: 20rpx;
  margin-top: 5rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  height: auto;
}
.title{
  width: 65%;
  white-space: pre-wrap;
  font-size: 28rpx;
}
.item{
  display: flex;
  flex-direction: row;
  justify-content: center;
  flex-wrap: wrap;
  margin-right: 10rpx;
  font-size: 30rpx;
}

.itemThick{
  display: flex;
  flex-direction: row;
  justify-content: center;
  flex-wrap: wrap;
  margin-right: 10rpx;
  font-size: 30rpx;
  font-weight: 800;
}

.info-row2{
    padding-top: 5rpx;
    padding-left: 20rpx;
    padding-right: 20rpx;
  margin-top: 5rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;

  width: 100%;
  height: auto;
}
.hint1{
    width: 60%;
  white-space: pre-wrap;
  font-size: 26rpx;
  color: gainsboro;
}
.hint2{
      display: flex;
  flex-direction: row;
  justify-content: center;
  flex-wrap: wrap;
  margin-right: 10rpx;
  font-size: 26rpx;
  color: gainsboro
}

.no-score{
  align-self: center;
  font-size: 10pt;
  color: #0398e7;
}
